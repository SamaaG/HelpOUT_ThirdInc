<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="google-signin-client_id" content="336837821700-hpio3ub9grvbhh396ghg5lv7j9gnlo8s.apps.googleusercontent.com">

    <title>HelpOUT</title>
        @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Home" title="HelpOUT">
                    <div style ="color: white; background-color: #90C3D4; padding: 7px; border-radius: 25px;">
                        <img style="height:20px;"
                             src="/Content/imgs/saved places.png"> HelpOUT
                    </div>
                </a>

            </div>
            <div class="navbar-collapse collapse">
                
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content col-lg-8 col-lg-push-2">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - HelpOUT Team</p>
        </footer>
    </div>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDyNrmpNQK8ZJpczBa7n_K8S9cDt-cUBd4&signed_in=true&libraries=places" async defer></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/helpOutDependencies")
    @Scripts.Render("~/bundles/helpOut")
    <script src="~/Scripts/angular-toggle-switch.js"></script>
    <script src="~/Scripts/angular-toggle-switch.min.js"></script>
    <script src="~/Scripts/main.js"></script>
    <script src="~/Scripts/modernizr.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
